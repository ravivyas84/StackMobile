<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:id="@+id/imageView1"
		android:layout_height="wrap_content" android:background="@drawable/header"
		android:layout_width="fill_parent"></ImageView>
	<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="This App is still under development , please check back later. Thank You"
		android:padding="6dip" style="@style/textnormal"></TextView>
	<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_margin="6dip"
		android:text="Stackoverflow Stats" style="@style/texttitle"></TextView>
	<ProgressBar android:layout_margin="6dip"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/statusProgress"></ProgressBar>
	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/relativeLayout1" android:layout_height="wrap_content"
		android:visibility="gone">
		<TextView android:id="@+id/textView3" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginBottom="6dip"
			android:layout_marginLeft="6dip" android:text="Questions  :" style="@style/textnormal"></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_toRightOf="@+id/textView3" android:layout_height="wrap_content"
			android:layout_alignTop="@+id/textView3" android:layout_alignBottom="@+id/textView3"
			android:id="@+id/questionsValue"></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_height="wrap_content" android:id="@+id/textView4"
			android:layout_below="@+id/textView3" android:layout_alignLeft="@+id/textView3"
			android:layout_marginBottom="6dip" android:text="Answers : "></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_toRightOf="@+id/textView4" android:layout_height="wrap_content"
			android:layout_alignTop="@+id/textView4" android:layout_alignBottom="@+id/textView4"
			android:id="@+id/answersValue"></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_height="wrap_content" android:id="@+id/textView5"
			android:layout_below="@+id/textView4" android:layout_alignLeft="@+id/textView4"
			android:layout_marginBottom="6dip" android:text="Users : "></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_height="wrap_content" android:layout_toRightOf="@+id/textView5"
			android:layout_alignTop="@+id/textView5" android:layout_alignBottom="@+id/textView5"
			android:id="@+id/usersValue"></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_height="wrap_content" android:id="@+id/textView6"
			android:layout_below="@+id/textView5" android:layout_alignLeft="@+id/textView5"
			android:layout_marginBottom="6dip" android:text="Questions per minute : "></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_toRightOf="@+id/textView6" android:layout_height="wrap_content"
			android:layout_alignTop="@+id/textView6" android:layout_alignBottom="@+id/textView6"
			android:id="@+id/qpmValue"></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_height="wrap_content" android:id="@+id/textView7"
			android:layout_below="@+id/textView6" android:layout_alignLeft="@+id/textView6"
			android:layout_marginBottom="6dip" android:text="Answers per minute : "></TextView>
		<TextView android:layout_width="wrap_content" style="@style/textnormal"
			android:layout_toRightOf="@+id/textView7" android:layout_height="wrap_content"
			android:layout_alignTop="@+id/textView7" android:layout_alignBottom="@+id/textView7"
			android:id="@+id/apmValue"></TextView>
	</RelativeLayout>
</LinearLayout>
